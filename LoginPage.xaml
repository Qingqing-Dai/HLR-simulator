<Page x:Class="HLR_Simulator.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:HLR_Simulator"
      mc:Ignorable="d"
      Title="LoginPage">
    
    <Grid Background="#F5F7FA">
        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameBox" Margin="0,5,0,15"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,15"/>

            <CheckBox Content="Remember Me" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Login" Width="100" Click="Login_Click"/>
                <Button Content="Cancel" Width="100" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
